<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/featured_item"
    android:layout_width="560dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="-180dp"
    android:foreground="?attr/selectableItemBackground"
    app:motionDebug="SHOW_PATH"
    app:layoutDescription="@xml/scene_item">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/color_card_image"
        android:layout_width="180dp"
        android:layout_height="250dp"
        app:cardBackgroundColor="@color/blue_900"
        android:elevation="4dp"
        app:cardCornerRadius="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/color_card_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/color_card_image"
        app:layout_constraintBottom_toBottomOf="@+id/color_card_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="16dp"
        android:gravity="center" />

</androidx.constraintlayout.motion.widget.MotionLayout>